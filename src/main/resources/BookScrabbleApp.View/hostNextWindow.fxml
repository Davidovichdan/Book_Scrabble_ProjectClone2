<BorderPane prefHeight="610.0" prefWidth="875.0" stylesheets="@../background.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BookScrabbleApp.View.HostController">
   <center>
      <VBox alignment="CENTER" fillWidth="false" maxHeight="-Infinity" prefHeight="392.0" prefWidth="811.0" BorderPane.alignment="TOP_CENTER">
         <children>
      
                                 <Label fx:id="welcomeText" alignment="CENTER" prefHeight="56.0" prefWidth="374.0" text="Welcome to the Host" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP" underline="true" wrapText="true">
                   <font>
                       <Font name="Apple Braille" size="39.0" />
                   </font>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
               </Label>
                   <TextField fx:id="nameTextFiled" alignment="CENTER" minHeight="37.0" minWidth="321.0" prefHeight="37.0" prefWidth="321.0" promptText="Enter your name here">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Apple Braille" size="13.0" />
               </font>
            </TextField>

                   <TextField fx:id="portField" alignment="CENTER" prefHeight="37.0" prefWidth="321.0" promptText="Enter port for host server">
               <font>
                  <Font name="Apple Braille" size="13.0" />
               </font>
            </TextField>
             
                     <Button alignment="CENTER" contentDisplay="CENTER" onAction="#switchToGameWindow" prefHeight="46.0" prefWidth="183.0" stylesheets="@../buttonStyleSheets.css" text="Start">
