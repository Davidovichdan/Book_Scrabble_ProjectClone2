<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="610.0" prefWidth="875.0" stylesheets="@../background.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BookScrabbleApp.View.HostController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
   
                        <Label fx:id="welcomeText" prefHeight="56.0" prefWidth="350.0" text="Welcome to the Host" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP" underline="true" wrapText="true">
                   <font>
                       <Font size="39.0" />
                   </font>
               </Label>
            <VBox>
               <children>
                  <HBox alignment="CENTER">
                     <children>
                           <TextField fx:id="nameTextFiled" prefHeight="37.0" prefWidth="577.0" text="Enter your name here">
                           <opaqueInsets>
                              <Insets left="100.0" right="100.0" />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets right="200.0" top="20.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                           <Label fx:id="stringYourIp" prefHeight="69.0" prefWidth="158.0" text="your ip:" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP" visible="false" wrapText="true">
                               <font>
                                   <Font size="39.0" />
                               </font>
                           </Label>
                           <Label fx:id="yourIp" prefHeight="56.0" prefWidth="370.0" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP" wrapText="true">
                               <font>
                                   <Font size="39.0" />
                               </font>
                           </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                           <Label fx:id="stringYourPort" prefHeight="69.0" prefWidth="201.0" text="your port:" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP" visible="false" wrapText="true">
                               <font>
                                   <Font size="39.0" />
                               </font>
                           </Label>
                           <Label fx:id="yourPort" prefHeight="56.0" prefWidth="350.0" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP" wrapText="true">
                               <font>
                                   <Font size="39.0" />
                               </font>
                           </Label>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin>
            </VBox>
               <Button onAction="#switchToGameWindow" prefHeight="46.0" prefWidth="183.0" stylesheets="@../buttonStyleSheets.css" text="Start">
                   <font>
                       <Font size="29.0" />
                   </font>
               </Button>
               <Button onAction="#initializeNextHostWindow" prefHeight="46.0" prefWidth="183.0" stylesheets="@../buttonStyleSheets.css" text="Get">
                   <font>
                       <Font size="29.0" />
                   </font>
               </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
